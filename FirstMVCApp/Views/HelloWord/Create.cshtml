@model DogViewModel

<a>We Are Here</a>


<div class="row">
    <div class="col-6">
        <div class="card">
            <form asp-controller="HelloWord" asp-action="CreateDog" method="post">
              
                <div class="card-header ">
                    <h4>Dog List</h4>
                </div>

                <div  class = "card-body">
                    <div class="mb-3">
                     <div class="form-check">
                      <label for="disabledSelect" class="form-label">Name</label>
                      <input asp-for=Name type="text" id="disabledTextInput" class="form-control" placeholder="Name">
                     </div>
                    </div>
                    <div class="mb-3">
                     <div class="form-check">
                      <label for="disabledSelect" class="form-label">Age</label>
                      <input asp-for="Age" type="number" id="disabledTextInput" class="form-control" placeholder="Age">
                     </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                <div class=" card-footer">

                </div>
              
            </form>
        </div>
    </div>
</div>
